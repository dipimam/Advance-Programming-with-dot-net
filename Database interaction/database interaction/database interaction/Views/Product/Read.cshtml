@model List<database_interaction.Models.Entity.Product>
@{
    ViewBag.Title = "Read";
}

<h2>Read</h2>


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    @foreach (var s in Model)
    {
<tr>
    <td>@s.id</td>
    <td>@s.name</td>
    <td>@s.price</td>
    <td>@s.quantity</td>
    <td>@s.description</td>
    <td><a href="/Product/Update/@s.id" class="btn btn-primary">Edit</a></td>
    <td><a href="/Product/Delete/@s.id" class="btn btn-danger">Delete</a></td>
</tr>
    }
</table>

